<h1>Index Moves</h1>

<div class="controls">
    <%= link_to 'New Move', new_move_path(@move), class: "a-primary"  %>
</div>

<div class="infocard">
    <% @moves.each do |move| %>
        <p>
            <%= link_to move.name, move_path(move.id), class: "a-primary"  %>
            <img class="thumbnail" src="<%= move.image %>">
        </p>
    <% end %>
</div>
