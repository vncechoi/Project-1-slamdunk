<!DOCTYPE html>
<html>
  <head>
    <title>Slamdunk</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav>
        <%= link_to 'Home', root_path %>
        <% if @current_user.present? %>
          <%= link_to 'All Users', users_path, class: "colourbottombar"  if @current_user.admin?  %>
          <%= link_to 'All Players', players_path, class: "colourbottombar" %>
          <%= link_to 'All Moves', moves_path, class: "colourbottombar" %>
          <%= link_to 'Dream Team', dreams_path, class: "colourbottombar" %>
          <%= link_to "Logout #{ @current_user.email }", login_path, class: "colourbottombar", :method => 'delete' %>
        <% else %>
          <%= link_to 'Sign Up', new_user_path, class: "colourbottombar" %>
          <%= link_to 'Sign In', login_path, class: "colourbottombar" %>
        <% end %>
      </nav>
    
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>