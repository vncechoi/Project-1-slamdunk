<%= form_for @undraft_player_path do |f| %>
    <%= f.label :name  %>
    <%= f.text_field :name %>

    <%= f.label :position %>
    <%= f.text_field :position %>

    <%= f.label :teamname %>
    <%= f.text_field :teamname %>

    <%= f.label :description %>
    <%= f.text_field :description %> 

    <%= f.label :quote %>
    <%= f.text_field :quote %>   

    <%= f.label :image %>
    <%= f.text_field :image, :required => true %>

    <%= f.submit %>
<% end %>