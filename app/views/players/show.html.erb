<div style="display: inline-block"class="PlayDraft">
    <% unless @player.image.nil? || @player.image.empty? %>
        <img class="feature" src="<%= @player.image %>" alt="<%= @player.name %>">
    <% end %>
        <div class="NameInDraft">
            Name: <%= @player.name %>
        </div>
        <div class="PositionInDraft">
           Position: <%= @player.position %>
        </div>
        <div class="TeamnameInDraft">
           Team Name: <%= @player.teamname %>
        </div>
        <div class="PlayernumberInDraft">
           Player Number: <%= @player.playernumber %>
        </div>
        <div class="DescriptionInDraft">
           Description: <%= @player.description %>
        </div>
        <div class="QuoteInDraft">
           Quote: <%= @player.quote %>
        </div>

    <div class="controlsDraft">
        <%= link_to 'Add to Dream Team', dreams_path(:id => @player.id), :method => 'post' %>
        <%= link_to 'Edit player', edit_player_path(@player) %>
        <%= link_to 'Delete player', @player, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
    </div>
</div>